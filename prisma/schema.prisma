generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Expense {
  id        Int      @id @default(autoincrement())
  amount    Decimal
  date      DateTime
  note      String?
  createdAt DateTime @default(now())

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  expenses  Expense[]
}
